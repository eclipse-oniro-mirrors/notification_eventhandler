import("//build/ohos.gni")
import("../../eventhandler.gni")

ohos_shared_library("cj_emitter_ffi") {
  sanitize = {
    cfi = true
    cfi_cross_dso = true
    debug = false
  }

  include_dirs = [
    "include",
    "${inner_api_path}",
  ]

  if (product_name != "ohos-sdk") {
    deps = [ "${frameworks_path}/eventhandler:libeventhandler" ]

    external_deps = [
      "hilog:libhilog",
      "napi:cj_bind_ffi",
      "napi:cj_bind_native",
    ]

    sources = [
      "src/emitter.cpp",
      "src/emitter_ffi.cpp",
      "src/event_handler_impl.cpp",
    ]
  } else {
    sources = [ "src/emitter_mock.cpp" ]
  }

  relative_install_dir = "module/events"
  subsystem_name = "notification"
  part_name = "eventhandler"
}
